<p id="notice"><%= notice %></p>

<h1>Очереди</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Дата</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lab_queues.each do |lab_queue| %>
      <tr>
        <td><%= lab_queue.name %></td>
        <td><%= lab_queue.date %></td>
        <td><%= link_to 'Показать', lab_queue %></td>
        <% if (session[:current_client_vkid] == 140285287) %>
        <td><%= link_to 'Редактировать', edit_lab_queue_path(lab_queue) %></td>
        <td><%= link_to 'Удалить', lab_queue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Создать новую очередь', new_lab_queue_path %>
